{
  "version": 2,
  "cli": {
    "defaultCollection": "@nrwl/nest"
  },
  "defaultProject": "animal-api",
  "projects": {
    "animal-api": {
      "root": "apps/animal-api",
      "sourceRoot": "apps/animal-api/src",
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@nrwl/node:build",
          "outputs": [
            "{options.outputPath}"
          ],
          "options": {
            "outputPath": "dist/apps/animal-api",
            "main": "apps/animal-api/src/main.ts",
            "tsConfig": "apps/animal-api/tsconfig.app.json",
            "assets": [
              "apps/animal-api/src/assets"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "extractLicenses": true,
              "inspect": false,
              "fileReplacements": [
                {
                  "replace": "apps/animal-api/src/environments/environment.ts",
                  "with": "apps/animal-api/src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@nrwl/node:execute",
          "options": {
            "buildTarget": "animal-api:build"
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/animal-api/**/*.ts"
            ]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": [
            "coverage/apps/animal-api"
          ],
          "options": {
            "jestConfig": "apps/animal-api/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  }
}